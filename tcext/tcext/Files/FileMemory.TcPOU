    <Method Name="write" Id="{7f89e6d5-f770-4e79-ba9b-7a808aca01be}">
      <Declaration><![CDATA[METHOD write
VAR_INPUT
  start: BOOL;
  data_ptr: POINTER TO BYTE;
  data_size: UDINT;
END_VAR
VAR_OUTPUT
  done: BOOL;
  error_id: UDINT;
END_VAR
