END_VAR
VAR_INST
  file_handler: UINT;
  lr_start: LockingRelay;
  done_mem: BOOL;
  error_id_mem: UDINT;
  counter: INT;
  timeout_timer: TON;
  timeout_start: BOOL;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[lr_start.clk := start;
timeout_timer(IN:=timeout_start, PT:=timeout_write);
IF timeout_timer.Q THEN
  counter := -1;
  error_id_mem := 16#010000;
END_IF

CASE counter OF
0:
  done_mem := TRUE;
  IF lr_start.q THEN
    lr_start.reset := TRUE;
    done_mem := FALSE;
    error_id_mem := 0;
    counter := counter + 10;
  END_IF
10:
